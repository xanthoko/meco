Node thermoSensor{
    properties:
        Float temperature = '14.2'
    outPorts:
        - publisher:
            topic: thermo.th
            message:
                Float temperature
                Float humidity = '12.2'
}

Node sonarSensor{
    outPorts:
        - publisher:
            topic: ss.data
}

Node TV{
    properties:
        Boolean isOn = 'True'
    inPorts:
        - subscriber:
            topic: tv.data
}

Node ACDevice{
    properties:
        Boolean isOn = 'True'
        Float temperature
    inPorts:
        - subscriber:
            topic: thermo.th
}
