import messages.idl;
import broker.br;

Broker: MyRedis

Node thermoSensor{
    properties: thermoProperties
    outPorts:
        - publisher:
            topic: thermo.humidity
            message: ThermoSensorMsg2
        - rpc_service thermoRPC:
            message: SonarSensorMsgR
}

Node sonarSensor{
    outPorts:
        - publisher:
            topic: ss.data
}

Node TV{
    inPorts:
        - subscriber:
            topic: tv.data
}

Node ACDevice{
    inPorts:
        - subscriber:
            topic: thermo.humidity
        - rpc_client thermoRPC:
            message: SonarSensorMsgR
}
