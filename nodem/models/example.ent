import messages.idl;

Node thermoSensor{
    outPorts:
        - publisher:
            topic: thermo.humidity
            message: ThermoSensorMsg2
        - rpc_service thermoRPC
}

Node sonarSensor{
    outPorts:
        - publisher:
            topic: ss.data
}

Node TV{
    inPorts:
        - subscriber:
            topic: tv.data
}

Node ACDevice{
    inPorts:
        - subscriber:
            topic: thermo.humidity
        - rpc_client thermoRPC
}
