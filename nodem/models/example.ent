import messages.idl;
import brokers.br;

Broker: R4ABroker
Broker: MyRabbit
Broker: MyRedis

Node thermoSensor{
    outPorts:
        - publisher:
            topic: thermo.humidity
            message: ThermoSensorMsg2
        - rpc_service thermoRPC:
            message: SonarSensorMsgR
    broker: R4ABroker
}

Node sonarSensor{
    outPorts:
        - publisher:
            topic: ss.data
            message: SonarSensorMsg
    broker: R4ABroker
}

Node TV{
    inPorts:
        - subscriber:
            topic: tv.data
    broker: R4ABroker
}

Node ACDevice{
    inPorts:
        - subscriber:
            topic: thermo.humidity
        - rpc_client thermoRPC:
            message: SonarSensorMsgR
    broker: R4ABroker
}
