Node thermoSensor{
    properties:
        Float temperature = '14.2'
    outPorts:
        - publisher thermoPub:
            Float temperature
            Float humidity = '12.2'
}

Node sonarSensor{
    outPorts:
        - publisher ssPub
}

Node TV{
    properties:
        Boolean isOn = 'True'
    inPorts:
        - subscriber tvSub
}

Node ACDevice{
    properties:
        Boolean isOn = 'True'
        Float temperature
    inPorts:
        - subscriber acSub
}

Connector temp{
    fromPort: thermoPub
    toPort: acSub
}
