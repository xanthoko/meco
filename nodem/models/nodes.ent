import messages.idl;
import brokers.br;

Broker: R4ABroker
Broker: MyRabbit

Node thermoSensor{
    properties: thermoProperties
    outPorts:
        - publisher:
            topic: thermo.temp
            message: ThermoSensorMsg
        - publisher:
            topic: thermo.humidity
            message: ThermoSensorMsg2
        - rpc_service thermoRPC:
            message: ThermoSensorMsgR
    broker: R4ABroker
}

Node sonarSensor{
    outPorts:
        - publisher:
            topic: sonar.data
            message: SonarSensorMsg
        - rpc_service sonarRPC:
            message: SonarSensorMsgR
    broker: R4ABroker
}

Node TV{
    inPorts:
        - subscriber:
            topic: s.s
    broker: R4ABroker
}

Node ACDevice{
    inPorts:
        - subscriber:
            topic: thermo.humidity
        - rpc_client thermoRPC:
            message: ThermoSensorMsgR
    broker: R4ABroker
}
