Node thermoSensor{
    outPorts:
        - publisher:
            Float temperature = '10'
            Float humidity
        - rpc_service
}

Node sonarSensor{
    outPorts:
        - publisher
}

Node TV{
    properties:
        Boolean isOn = 'True'
    inPorts:
        - subscriber
}

Node ACDevice{
    properties:
        Boolean isOn = 'True'
        Float temperature
    inPorts:
        - subscriber
        - rpc_client
}

Connector temp{
    fromPort: thermoSensor.publisher
    toPort: ACDevice.subscriber
}
